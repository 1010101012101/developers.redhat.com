{% set classes = [
'paragraph',
'paragraph--type--' ~ paragraph.bundle|clean_class,
view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
] %}

{#
{% if content.field_featured_connectors|render|striptags|trim %}
    {% set featured_connectors = content.field_featured_connectors[0]['#context']['value']|split(',')|json_encode %}
{% endif %}
#}
<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    <div{{ title_attributes }}>{{ label }}</div>
    {{ title_suffix }}

    <div{{ content_attributes }}>
        {#
            {% if (featured_connectors is not empty) %}
                <div class="row">
                    <div class="large-24 columns">
                        <div class="featured-projects">
                            <h2 id="featured-connectors">Featured Connectors</h2>
                            <span class="featured-connector-ids" hidden="true">{{ featured_connectors }}</span>
                            <ul class="featured-connectors-results"></ul>
                        </div>
                    </div>
                </div>
            {% endif %}
        #}
        <div class="row">
            <div class="large-24 columns text-content">
                <span data-target-product="{{ product_machine_name }}"></span>
                <span data-order-by="priority"></span>
                <h2 class="subpage-name" id="overview">All Connectors</h2>
                <p class="link-list connectors-order">
                    <strong>Order By</strong>
                    <a href="#" class="active order-priority"><i class="fas fa-sort-amount-down"></i> Importance</a>
                    <a href="#" class="order-alpha"><i class="fas fa-sort-amount-up"></i> Alphabetically</a>
                </p>
                {% if content.field_overview_main_content|render|striptags|trim is not empty %}
                    {{ content.field_overview_main_content }}
                {% endif %}
                <ul class="large-block-grid-4 medium-block-grid-2 connector-results"></ul>
                <small>&#42;All registered trademarks belong to their respective owners.</small>
            </div>
        </div>
    </div>
</div>
