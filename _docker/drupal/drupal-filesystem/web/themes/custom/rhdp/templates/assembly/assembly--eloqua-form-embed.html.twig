<section{{ attributes.addClass('assembly') }}{{ audience_selection }}>
  <div class="iframe-container">
    <iframe id="iframe-{{ eloqua_assembly_id }}" src="/rhd/rhd_eloqua_embed/{{ eloqua_assembly_id }}{{ eloqua_assembly_options }}" scrolling="no"></iframe>
  </div>
</section>
<script>
  resizeUnloadedIframe();
  $(window).resize(function() {
    resizeLoadedIframe();
  });
  function resizeUnloadedIframe() {
    $('iframe#iframe-{{ eloqua_assembly_id }}').load(function() {
      var gatedFormHeight = $(this).contents().find('#GatedFormContainer').height();
      $(this).parent().height(gatedFormHeight+10).animate({'opacity': 1}, 2000);
    });
  }
  function resizeLoadedIframe() {
    var iframe = $('iframe#iframe-{{ eloqua_assembly_id }}');
    var gatedFormHeight = iframe.contents().find('#GatedFormContainer').height();
    iframe.parent().height(gatedFormHeight);
  }
</script>
